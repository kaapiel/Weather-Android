<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00140083"
    android:visibility="gone">

    <br.com.aguido.weather.ui.widget.WeatherLoading
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/loading_progress_size"
        android:layout_height="@dimen/loading_progress_size"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        style="@style/CieloReportsTheme.TextView.Loading"
        android:layout_below="@+id/loading_progress"
        android:id="@+id/loading_progress_text"
        android:text="@string/loading_text" />

</RelativeLayout>